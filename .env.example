# MyPA Notes PWA - Environment Configuration
# Copy this file to .env.local and configure with your values

# Development Configuration
NODE_ENV=development
VITE_APP_NAME="MyPA - Personal Assistant"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="AI-powered personal productivity assistant"

# API Configuration
# Note: Anthropic API keys are stored encrypted in the browser
# This is for development/testing purposes only
# VITE_ANTHROPIC_API_KEY=your_api_key_here

# PWA Configuration
VITE_PWA_NAME="MyPA"
VITE_PWA_SHORT_NAME="MyPA"
VITE_PWA_THEME_COLOR="#3b82f6"
VITE_PWA_BACKGROUND_COLOR="#ffffff"

# Backend API Configuration (Secure Proxy)
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TOKEN=your-jwt-token-here

# Legacy: Direct AI Provider Keys (DEPRECATED - Use backend proxy instead)
# VITE_ANTHROPIC_API_KEY=your-anthropic-key-here

# Analytics Configuration (optional)
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_SENTRY_DSN=your_sentry_dsn

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_SYNC=true
VITE_ENABLE_ADVANCED_SEARCH=true

# Development Tools
VITE_ENABLE_DEV_TOOLS=true
VITE_SHOW_DEBUG_INFO=false

# Security Settings
VITE_SECURE_STORAGE_PREFIX="mypa_secure_"
VITE_ENCRYPTION_ITERATIONS=100000

# Timezone Configuration
VITE_DEFAULT_TIMEZONE="Australia/Sydney"