# MyPA Notes PWA - Production Environment
NODE_ENV=production
VITE_APP_NAME="MyPA - Personal Assistant"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="AI-powered personal productivity assistant"

# PWA Configuration
VITE_PWA_NAME="MyPA"
VITE_PWA_SHORT_NAME="MyPA"
VITE_PWA_THEME_COLOR="#3b82f6"
VITE_PWA_BACKGROUND_COLOR="#ffffff"

# Feature Flags (Production)
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_SYNC=true
VITE_ENABLE_ADVANCED_SEARCH=true

# Development Tools (Disabled in Production)
VITE_ENABLE_DEV_TOOLS=false
VITE_SHOW_DEBUG_INFO=false

# Security Settings
VITE_SECURE_STORAGE_PREFIX="mypa_secure_"
VITE_ENCRYPTION_ITERATIONS=100000

# Timezone Configuration
VITE_DEFAULT_TIMEZONE="Australia/Sydney"

# Note: Sensitive configuration like API keys should be set via deployment platform
# VITE_ANALYTICS_ID=
# VITE_SENTRY_DSN=